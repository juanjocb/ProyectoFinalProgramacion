<?import javafx.scene.layout.*?>

<AnchorPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="720" prefWidth="1280" style="-fx-background-color: #72C1F2" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="co.edu.uniquindio.agenciaviajes.agenciaviajes.controlador.LoginController" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox prefHeight="720.0" prefWidth="1280.0">
            <children>
                <VBox prefHeight="720.0" prefWidth="640.0">
                    <children>
                        <HBox prefHeight="158.0" prefWidth="635.0" />
                        <HBox prefHeight="395.0" prefWidth="635.0">
                            <ImageView fitHeight="366.0" fitWidth="454.0">
                                <image>
                                    <Image url="@../../../../../../java/co/edu/uniquindio/agenciaviajes/agenciaviajes/images/logotipo.png" />
                                </image>
                            </ImageView>
                            <children>
                                <VBox prefHeight="395.0" prefWidth="128.0" />
                                <VBox prefHeight="395.0" prefWidth="379.0">
                                </VBox>
                                <VBox prefHeight="200.0" prefWidth="100.0" />
                            </children>
                        </HBox>
                        <HBox prefHeight="161.0" prefWidth="635.0" />

                    </children></VBox>
                <VBox alignment="CENTER" prefHeight="659.0" prefWidth="646.0" spacing="20.0">
                    <children>
                        <Label style="-fx-text-fill: white; -fx-font-size: 24;" text="Viajes sin fronteras" />
