                            <children>
                                <Label style="-fx-text-fill: white; -fx-font-size: 18;" text="¿Ya es miembro?" />
                                <Button fx:id="buttonCrearCuenta" onAction="#crearCuentaCliente" style="-fx-background-color: #0597F2; -fx-text-fill: white; -fx-font-size: 18;" text="Crear cuenta" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
